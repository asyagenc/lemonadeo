<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBFFF5"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="187dp"
        android:layout_below="@id/questionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/heavylift" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:fontFamily="@font/crushed"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:fontFamily="@font/crushed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/numberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/crushed"
        android:inputType="number"
        android:visibility="visible" />

    <Button
        android:id="@+id/submitAnswerButton"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_below="@id/answerEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:backgroundTint="#FF009688"
        android:fontFamily="@font/crushed"
        android:text="@string/submit_your_answer"
        android:visibility="visible" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitAnswerButton"
        android:fontFamily="@font/crushed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="244dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crushed"
        android:layout_below="@id/scoreTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />


</RelativeLayout>
