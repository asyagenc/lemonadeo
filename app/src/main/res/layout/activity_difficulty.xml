<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBFFF5"
    android:padding="16dp">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/easyButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/easy"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/crushed"
        android:text="@string/easy"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/mediumButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mediumButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/medium"
        android:backgroundTint="#FF9800"
        android:fontFamily="@font/crushed"
        android:text="@string/medium"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hardButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/hard"
        android:backgroundTint="#CC3C3C"
        android:fontFamily="@font/crushed"
        android:text="@string/hard"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mediumButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goBackButton"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FF8BC34A"
        android:text="Go Back"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hardButton" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/crushed"
        android:text="@string/select_difficulty"
        android:textAlignment="center"
        android:textColor="#B42A1414"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/easyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>