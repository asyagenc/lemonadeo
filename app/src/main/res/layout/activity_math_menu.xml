<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:padding="16dp">


    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="368dp"
        android:layout_height="243dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/cartoon_maths_elements_background_educa_graphics_39463579_1" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="386dp"
        android:layout_height="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="9dp"
        android:text="Welcome to Multiplication Game.\nSelect your difficulty:  "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/easyButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/easy"
        android:text="Easy"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mediumButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:background="@drawable/medium"
        android:text="Medium"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hardButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:text="Hard"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/hard"
        android:textSize="28sp" />

</RelativeLayout>