<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBFFF5"
    tools:context=".firstScreen">


    <TextView
        android:id="@+id/lemonade"
        android:layout_width="189dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:contentDescription="@string/lemonade_description"
        android:fontFamily="@font/crushed"
        android:gravity="center"
        android:text="@string/lemonade"
        android:textColor="#FF9800"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="189dp"
        android:layout_height="160dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/todoaa"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uk"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:layout_marginBottom="209dp"
        android:contentDescription="@string/todo04"
        android:scaleType="centerCrop"
        android:src="@drawable/united_kingdom_7501809"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/turkish"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:contentDescription="@string/todo04"
        android:scaleType="centerCrop"
        android:src="@drawable/turkey_7533613"
        app:layout_constraintBottom_toTopOf="@+id/uk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="326dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit" />


</androidx.constraintlayout.widget.ConstraintLayout>