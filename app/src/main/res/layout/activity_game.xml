<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBFFF5"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="368dp"
                android:layout_height="181dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/cute_cartoon_brain_brain_illustration_png"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/gameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/crushed"
                android:gravity="center"
                android:text="@string/memorize_the_digits_in_5_seconds_and_write_the_number_in_forwardly_or_backwardly"
                android:textColor="#281C1C"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myImageView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/forwardButton"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/choice"
                android:backgroundTint="#FF9800"
                android:fontFamily="@font/crushed"
                android:text="@string/remember_forwardly"
                android:textColor="#FBFBFB"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gameTextView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backwardButton"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/choice"
                android:backgroundTint="#FF9800"
                android:fontFamily="@font/crushed"
                android:text="@string/remember_backwardly"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forwardButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
