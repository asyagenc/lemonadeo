<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBFFF5"
    android:padding="16dp">


    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="351dp"
        android:layout_height="207dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/calculator_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/crushed"
        android:text="@string/select_difficulty__"
        android:textAlignment="center"
        android:textColor="#B42A1414"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/easyButton"
        app:layout_constraintEnd_toEndOf="@+id/myImageView"
        app:layout_constraintStart_toStartOf="@+id/myImageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/easyButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/easy"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/crushed"
        android:text="@string/easy__"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myImageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mediumButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/medium"
        android:backgroundTint="#FF9800"
        android:fontFamily="@font/crushed"
        android:text="@string/medium__"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easyButton"
        android:layout_marginTop="16dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hardButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/hard"
        android:backgroundTint="#CC3C3C"
        android:fontFamily="@font/crushed"
        android:text="@string/hard__"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mediumButton"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
